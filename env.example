# Execution Authority Service Configuration
ARF_EDITION=enterprise  # or "oss" for open source mode
ARF_LICENSE_KEY=ARF-ENT-...  # Enterprise license key

# Mechanical Enforcement
ENABLE_MECHANICAL_ENFORCEMENT=true
DEFAULT_EXECUTION_MODE=approval
MAX_RISK_TOLERANCE=0.3
MIN_CONFIDENCE_THRESHOLD=0.8

# Enterprise Features (only when ARF_EDITION=enterprise)
ARF_ENTERPRISE_REDIS_URL=redis://localhost:6379/0
ARF_ENTERPRISE_LICENSE_CACHE_TTL=300
ARF_ENTERPRISE_AUDIT_ENCRYPTION_KEY=  # Optional, for encrypted audit trails

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Performance Settings
AUTHORITY_EVALUATION_TIMEOUT_MS=5000
PREFLIGHT_CHECK_TIMEOUT_MS=2000
LICENSE_VALIDATION_TIMEOUT_MS=1000

# Security Settings
REQUIRE_HUMAN_APPROVAL_FOR=DROP,DELETE,TERMINATE,SHUTDOWN,FORMAT
DISALLOWED_ACTIONS=DATABASE_DROP,SYSTEM_SHUTDOWN,USER_DELETION
MAX_BLAST_RADIUS=5

# Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_TRAIL=true
AUDIT_RETENTION_DAYS=90

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
